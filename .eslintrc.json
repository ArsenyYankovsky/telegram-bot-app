{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "rules": {
    "linebreak-style": "off",
    "camelcase": "off",
    "no-plusplus": "off",
    "semi": [
      "error",
      "never"
    ]
  }
}
