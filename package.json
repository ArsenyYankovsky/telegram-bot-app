{
  "name": "chat-bot",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/drai/telegram-bot-app"
  },
  "author": "Eugene Draitsev <ddrrai@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env IS_LOCAL=true sls offline start",
    "lint": "eslint \"src/**\"",
    "lint:fix": "eslint \"src/**\" --fix",
    "tsc": "tsc --noEmit",
    "test": "cross-env IS_LOCAL=true jest --verbose",
    "invoke-local": "serverless invoke local -f telegram-bot -p event.json",
    "logs": "sls logs -f telegram-bot -t",
    "deploy-function": "sls deploy function --function telegram-bot --verbose"
  },
  "dependencies": {
    "aws-sdk": "^2.450.0",
    "aws-xray-sdk": "^2.3.3",
    "form-data": "^2.3.3",
    "lodash": "^4.17.11",
    "luxon": "^1.13.0",
    "node-fetch": "^2.5.0",
    "telegraf": "^3.29.0",
    "telegram-typings": "^4.0.0-beta",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@babel/preset-env": "7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/form-data": "^2.2.1",
    "@types/jest": "^24.0.12",
    "@types/lodash": "^4.14.123",
    "@types/luxon": "^1.12.0",
    "@types/node-fetch": "^2.3.3",
    "@types/xml2js": "^0.4.4",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "file-loader": "^3.0.1",
    "jest": "^24.8.0",
    "serverless": "^1.41.1",
    "serverless-offline": "^4.10.0",
    "serverless-webpack": "^5.3.0",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/.webpack",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.mp4$": "<rootDir>/src/__mocks__/fileMock.ts"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
