{
  "name": "chat-bot",
  "version": "0.9.0",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/drai/telegram-bot-app"
  },
  "author": "Eugene Draitsev <ddrrai@gmail.com>",
  "scripts": {
    "start": "cross-env IS_LOCAL=true sls offline start",
    "lint": "tslint src/**/*.ts src/**/*.tsx",
    "lint:fix": "tslint src/**/*.ts src/**/*.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "cross-env IS_LOCAL=true jest --verbose",
    "invoke-local": "serverless invoke local -f telegram-bot -p event.json",
    "logs": "sls logs -f telegram-bot -t",
    "deploy-function": "sls deploy function --function telegram-bot --verbose",
    "invoke": "sls invoke -f telegram-bot -p event.json"
  },
  "dependencies": {
    "aws-sdk": "^2.342.0",
    "aws-xray-sdk": "^2.0.1",
    "form-data": "^2.3.3",
    "lodash": "^4.17.11",
    "node-fetch": "^2.2.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.14",
    "@types/form-data": "^2.2.1",
    "@types/jest": "^23.3.7",
    "@types/lodash": "^4.14.117",
    "@types/node-fetch": "^2.1.2",
    "@types/xml2js": "^0.4.3",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "serverless": "^1.32.0",
    "serverless-offline": "^3.29.0",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.3",
    "webpack": "^4.23.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "license": "MIT"
}
