{
  "name": "chat-bot",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/EugeneDraitsev/telegram-bot-app"
  },
  "author": "Eugene Draitsev <ddrrai@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env IS_LOCAL=true sls offline start",
    "lint": "eslint \"src/**\"",
    "lint:fix": "eslint \"src/**\" --fix",
    "tsc": "tsc --noEmit",
    "test": "cross-env IS_LOCAL=true jest --verbose",
    "invoke-local": "serverless invoke local -f telegram-bot -p event.json",
    "logs": "sls logs -f telegram-bot -t",
    "deploy-function": "sls deploy function --function telegram-bot --verbose"
  },
  "dependencies": {
    "aws-sdk": "^2.543.0",
    "aws-xray-sdk": "^2.3.6",
    "form-data": "^2.5.1",
    "lodash": "^4.17.15",
    "luxon": "^1.19.3",
    "node-fetch": "^2.6.0",
    "telegraf": "^3.32.0",
    "telegram-typings": "^4.0.0-beta",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/preset-typescript": "^7.6.0",
    "@types/form-data": "^2.5.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.141",
    "@types/luxon": "^1.15.2",
    "@types/node-fetch": "^2.5.2",
    "@types/xml2js": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "file-loader": "^4.2.0",
    "jest": "^24.9.0",
    "serverless": "^1.53.0",
    "serverless-offline": "^5.12.0",
    "serverless-webpack": "^5.3.1",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/.webpack",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.mp4$": "<rootDir>/src/__mocks__/fileMock.ts"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
