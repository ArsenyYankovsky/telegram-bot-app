{
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.**"
    ]
  },
  "rules": {
    "semicolon": [
      true,
      "never"
    ],
    "max-line-length": [
      true,
      120
    ],
    "linebreak-style": [
      true,
      "LF"
    ],
    "object-literal-sort-keys": false,
    "array-type": false,
    "import-name": false,
    "variable-name": false
  }
}
